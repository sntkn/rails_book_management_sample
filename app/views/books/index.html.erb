<h1>Books</h1>
<div class="text-right">
<%= link_to 'New Book', new_book_path, class: 'btn btn-primary' %>
</div>
<table class="table my-3">
  <thead class="thead-light">
    <tr>
      <th>Title</th>
      <th>Total stock</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %><%=  %></td>
        <td><%= book.total_stock %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @books, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
